    <section class="home-section">
        <nav>
            <div class="sidebar-button">
                <i class='bx bx-menu sidebarBtn'></i>
                <span class="dashboard"> Dashboard</span>
            </div>
            @*<div class="search-box">
                    <input type="text" placeholder="Search...">
                    <i class='bx bx-search'></i>
                </div>*@
            <div class="profile-details">
                @*<img src="images/profile.jpg" alt="">*@
                <span class="admin_name">Welcome @Context.Session.GetString("username")</span>
            </div>
        </nav>

        <div class="home-content">
            <div class="container">

                    @model IEnumerable<Class_Management_System.Models.Mark>

                    @{
                        ViewData["Title"] = "Index";
                    }

                    <h1>Index</h1>

                    <p>
                        <a asp-action="Create">Create New</a>
                    </p>
                    <table class="table">
                        <thead>
                            <tr>
                                @*<th>
                                        @Html.DisplayNameFor(model => model.MarksId)
                                    </th>*@
                                <th>
                                    @Html.DisplayNameFor(model => model.SubjectId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.StudentId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TermName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MarksGotten)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    @*<td>
                                            @Html.DisplayFor(modelItem => item.MarksId)
                                        </td>*@
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SubjectId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StudentId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TermName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MarksGotten)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.MarksId }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.MarksId }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.MarksId })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>




            </div>
        </div>

    </section>


    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
